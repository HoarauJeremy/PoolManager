{# On √©tend le layout principal du projet (souvent base.html.twig) #}
{% extends 'base.html.twig' %}

{# D√©finition du titre de la page (affich√© dans l‚Äôonglet du navigateur) #}
{% block title %}Intervention index
{% endblock %}

{% block body %}
	{# =======================
			   ‚úÖ En-t√™te fixe en haut de la page
			   ======================= #}
	<div
		class="fixed top-0 left-0 right-0 bg-white shadow-md z-1 py-4 px-6 w">
		{# Titre principal #}
		<h1 class="text-3xl font-bold text-blue-600 mb-4 text-center">
			Liste des Interventions
		</h1>

		{# Bouton pour cr√©er une nouvelle intervention #}
		<div class="text-center">
			<a href="{{ path('app_intervention_new') }}" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-700 transition-colors">
				Cr√©er une Intervention
			</a>
		</div>
	</div>

	{# Ajoute un espace sous le header fixe pour √©viter que le contenu soit masqu√© #}
	<div class="h-40"></div>

	{# Conteneur principal du tableau, avec fond bleu clair et ombre #}
	<div
		class="bg-blue-50 rounded-lg p-6 shadow-lg">

		{# Permet un d√©filement horizontal si le tableau d√©passe la largeur #}
		<div
			class="overflow-x-auto">

			{# =======================
									   üìã Tableau des interventions
									   ======================= #}
			<table
				class="w-full bg-white rounded-lg overflow-hidden">

				{# En-t√™te du tableau #}
				<thead class="bg-blue-500 text-white">
					<tr>
						<th class="px-4 py-3 text-left text-sm font-semibold">Libelle</th>
						<th class="px-4 py-3 text-left text-sm font-semibold">Date d√©but</th>
						<th class="px-4 py-3 text-left text-sm font-semibold">Date fin</th>
						<th class="px-4 py-3 text-left text-sm font-semibold">Adresse</th>
						<th class="px-4 py-3 text-left text-sm font-semibold">Ville</th>
						<th class="px-4 py-3 text-left text-sm font-semibold">Code postal</th>
						<th class="px-4 py-3 text-left text-sm font-semibold">Infos</th>
						<th class="px-4 py-3 text-left text-sm font-semibold">Status</th>
						<th class="px-4 py-3 text-left text-sm font-semibold">Actions</th>
					</tr>
				</thead>

				{# Corps du tableau : on parcourt la variable "interventions" envoy√©e depuis le contr√¥leur #}
				<tbody class="divide-y divide-gray-200">
					{% for intervention in interventions %}
						<tr
							class="hover:bg-blue-50 transition-colors">
							{# Libell√© de l‚Äôintervention #}
							<td class="px-4 py-3 text-sm text-gray-700">
								{{ intervention.libelle }}
							</td>

							{# Date de d√©but, format√©e avec le filtre date() #}
							<td class="px-4 py-3 text-sm text-gray-700">
								{{ intervention.dateDebut ? intervention.dateDebut|date('Y-m-d H:i:s') : '' }}
							</td>

							{# Date de fin #}
							<td class="px-4 py-3 text-sm text-gray-700">
								{{ intervention.dateFin ? intervention.dateFin|date('Y-m-d H:i:s') : '' }}
							</td>

							{# Adresse compl√®te #}
							<td class="px-4 py-3 text-sm text-gray-700">
								{{ intervention.adresse }}
							</td>

							{# Ville #}
							<td class="px-4 py-3 text-sm text-gray-700">
								{{ intervention.ville }}
							</td>

							{# Code postal #}
							<td class="px-4 py-3 text-sm text-gray-700">
								{{ intervention.codePostal }}
							</td>

							{# Informations suppl√©mentaires #}
							<td class="px-4 py-3 text-sm text-gray-700">
								{{ intervention.infos }}
							</td>

							{# Statut (Enum) avec un style visuel en badge bleu #}
							<td class="px-6 py-4 whitespace-nowrap">
								{% set statusClass = '' %}
								{% if intervention.status.value == 'Planifer' %}
									{% set statusClass = 'bg-blue-100 text-blue-800' %}
								{% elseif intervention.status.value == 'En cours' %}
									{% set statusClass = 'bg-yellow-100 text-yellow-800' %}
								{% elseif intervention.status.value == 'Terminer' %}
									{% set statusClass = 'bg-green-100 text-green-800' %}
								{% else %}
									{% set statusClass = 'bg-red-100 text-red-800' %}
								{% endif %}
								<span class="px-3 py-1 text-xs font-semibold rounded-full {{ statusClass }}">
									{{ intervention.status.label() }}
								</span>
							</td>

							{# Actions disponibles : Voir / Modifier #}
							<td class="px-4 py-3 text-sm">
								<div
									class="flex gap-2">
									{# Lien vers la page de d√©tail (show) #}
									<a href="{{ path('app_intervention_show', {'id': intervention.id}) }}" class="px-3 py-1 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors text-xs font-medium">
										Voir
									</a>

									{# Lien vers la page d‚Äô√©dition (edit) #}
									<a href="{{ path('app_intervention_edit', {'id': intervention.id}) }}" class="px-3 py-1 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors text-xs font-medium">
										Modifier
									</a>
								</div>
							</td>
						</tr>

						{# Cas o√π la liste d‚Äôinterventions est vide #}
					{% else %}
						<tr>
							<td colspan="10" class="px-4 py-8 text-center text-gray-500 ml-5">
								Aucune intervention trouv√©e
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
