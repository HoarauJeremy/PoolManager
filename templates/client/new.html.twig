{% extends 'base.html.twig' %}

{% block title %}Ajouter un client{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/client/new.css') }}">
{% endblock %}

{% block body %}
    <div class="client-form-container">
        <div class="client-form-title">Ajouter un client</div>
        {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
            {{ form_row(form.email) }}
            {{ form_row(form.adresse) }}
            {{ form_row(form.ville) }}
            {{ form_row(form.code_postal) }}
            {{ form_row(form.tel_fixe) }}
            {{ form_row(form.tel_gsm) }}
            {{ form_row(form.save) }}
        {{ form_end(form) }}
        <a class="back-link" href="{{ path('app_client_index') }}">⟵ Retour à la liste</a>
    </div>
{% endblock %}