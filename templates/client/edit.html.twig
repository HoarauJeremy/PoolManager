{% extends 'base.html.twig' %}

{% block title %}Ajouter un client{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/client/edit.css') }}">
{% endblock %}

{% block body %}
    <div class="client-form-container">
        <div class="client-profile-section">
            <div class="client-form-title">Client Profile</div>

            <img src="{{ asset('images/default-avatar.png') }}" alt="Client avatar" class="client-avatar">

            <div class="client-info-grid">
                <div class="form-group">
                    <label for="client_name">Nom</label>
                    {{ form_widget(form.nom) }}
                </div>
                <div class="form-group">
                    <label for="client_email">Prenom</label>
                    {{ form_widget(form.prenom) }}
                </div>
                <div class="form-group">
                    <label for="client_phone">Email</label>
                    {{ form_widget(form.email) }}
                </div>
                <div class="form-group">
                    <label for="client_location">Adresse</label>
                    {{ form_widget(form.adresse) }}
                </div>
                <div class="form-group">
                    <label for="client_poolType">Ville</label>
                    {{ form_widget(form.ville) }}
                </div>
                <div class="form-group">
                    <label for="client_maintenanceFrequency">Code postal</label>
                    {{ form_widget(form.code_postal) }}
                </div>
                <div class="form-group">
                    <label for="client_serviceAddress">Telephone fixe</label>
                    {{ form_widget(form.tel_fixe) }}
                </div>
                <div class="form-group">
                    <label for="client_emergencyContact">Telehone gsm</label>
                    {{ form_widget(form.tel_gsm) }}
                </div>
            </div>

            <div class="client-actions">
                <button type="submit" class="save-btn">Ajouter un Client</button>
            </div>
        </div>

        <div class="client-history-section">
            <div class="history-title">Historique</div>

            <div class="history-item">
                <div>
                    <div class="service-name">Pool Cleaning - Downtown</div>
                    <div class="technician">Technician: John Smith</div>
                </div>
                <div class="service-date">2023-05-15</div>
            </div>

            <div class="history-item">
                <div>
                    <div class="service-name">Chemical Check - Northside</div>
                    <div class="technician">Technician: Jane Doe</div>
                </div>
                <div class="service-date">2023-06-02</div>
            </div>

            <div class="history-item">
                <div>
                    <div class="service-name">Pump Repair - Riverside</div>
                    <div class="technician">Technician: Michael Brown</div>
                </div>
                <div class="service-date">2023-06-15</div>
            </div>
        </div>
    </div>

    <a class="back-link" href="{{ path('app_client_index') }}">⟵ Retour à la liste</a>
{% endblock %}