{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur {{ user.email }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de l'utilisateur</h1>
        
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ user.email }}</h5>
                <p class="card-text">
                    <strong>ID:</strong> {{ user.id }}<br>
                    <strong>Email:</strong> {{ user.email }}<br>
                    <strong>Rôles:</strong> {{ user.roles ? user.roles|json_encode : 'Aucun rôle' }}
                </p>
                
                <div class="mt-3">
                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                        Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
