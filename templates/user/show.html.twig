{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur {{ user.email }}{% endblock %}

{% block body %}
    <div class="ml-20">
        <div class="max-w-2xl mx-auto my-10 bg-gradient-to-b from-blue-200 to-blue-300 rounded-3xl px-8 py-8 shadow-lg">
            <div class="text-center mb-8">
                <div class="w-24 h-24 rounded-full bg-white mx-auto mb-5 flex items-center justify-center text-blue-600 text-4xl font-bold shadow-md">
                    {{ user.email|first|upper }}
                </div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">
                    {% if user.nom is defined and user.prenom is defined %}
                        {{ user.prenom }} {{ user.nom }}
                    {% else %}
                        {{ user.email }}
                    {% endif %}
                </h1>
                <div class="text-gray-700 text-base mb-1">{{ user.email }}</div>
                <div class="text-gray-600 text-sm">ID: #{{ user.id }}</div>
            </div>
            
            <div class="bg-white rounded-2xl p-6 mb-6 shadow-sm">
                <div class="mb-4 pb-4 border-b border-gray-200 last:border-b-0 last:mb-0 last:pb-0">
                    <div class="text-xs uppercase tracking-wider text-gray-600 mb-2 font-semibold">Adresse email</div>
                    <div class="text-base text-gray-900 font-medium">{{ user.email }}</div>
                </div>
                
                <div class="mb-4 pb-4 border-b border-gray-200 last:border-b-0 last:mb-0 last:pb-0">
                    <div class="text-xs uppercase tracking-wider text-gray-600 mb-2 font-semibold">Rôles</div>
                    <div class="text-base text-gray-900 font-medium">
                        {% for role in user.roles %}
                            <span class="inline-block px-3 py-1.5 rounded-full text-sm font-semibold mr-2 mb-2 {{ role == 'ROLE_ADMIN' ? 'bg-red-100 text-red-700' : 'bg-blue-100 text-blue-700' }}">
                                {{ role|replace({'ROLE_': ''})|lower|capitalize }}
                            </span>
                        {% else %}
                            <span class="text-gray-500">Aucun rôle défini</span>
                        {% endfor %}
                    </div>
                </div>
                
                {% if user.telGsm is defined and user.telGsm %}
                <div class="mb-4 pb-4 border-b border-gray-200 last:border-b-0 last:mb-0 last:pb-0">
                    <div class="text-xs uppercase tracking-wider text-gray-600 mb-2 font-semibold">Téléphone</div>
                    <div class="text-base text-gray-900 font-medium">{{ user.telGsm }}</div>
                </div>
                {% endif %}
            </div>
            
            <div class="flex justify-center gap-3">
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="inline-flex items-center px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-xl font-bold transition-colors no-underline">
                    <i class="fas fa-edit mr-2"></i> Modifier
                </a>
                <a href="{{ path('app_user_index') }}" class="inline-flex items-center px-6 py-3 bg-white text-gray-700 rounded-xl font-bold transition-all hover:shadow-md no-underline">
                    <i class="fas fa-arrow-left mr-2"></i> Retour
                </a>
            </div>
        </div>
    </div>
{% endblock %}
