{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur {{ user.email }}{% endblock %}

{% block body %}
    <div class="ml-20">
        <div class="max-w-2xl mx-auto my-10 bg-gradient-to-b from-blue-200 to-blue-300 rounded-3xl px-8 py-8 shadow-lg">
            <h1 class="text-center text-3xl font-bold mb-7 text-gray-900">Modifier l'utilisateur</h1>
            
            {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm mb-1.5 transition-shadow focus:shadow-[0_0_0_2px_#339af0]'}}) }}
                    {{ form_errors(form.email) }}
                </div>
                
                <div class="mb-4">
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm mb-1.5 transition-shadow focus:shadow-[0_0_0_2px_#339af0]'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                
                <div class="mb-4">
                    {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm mb-1.5 transition-shadow focus:shadow-[0_0_0_2px_#339af0]'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>
                
                <div class="mb-4">
                    {{ form_label(form.telGsm, 'Téléphone', {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
                    {{ form_widget(form.telGsm, {'attr': {'class': 'w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm mb-1.5 transition-shadow focus:shadow-[0_0_0_2px_#339af0]'}}) }}
                    {{ form_errors(form.telGsm) }}
                </div>
                
                <div class="mb-4">
                    {{ form_label(form.roles, 'Rôles', {'label_attr': {'class': 'block mb-2 font-medium text-gray-700'}}) }}
                    <div class="bg-white rounded-xl p-4 shadow-sm">
                        {% for role in form.roles %}
                            <div class="flex items-center mb-2 last:mb-0">
                                {{ form_widget(role, {'attr': {'class': 'mr-2'}}) }}
                                {{ form_label(role, null, {'label_attr': {'class': 'text-gray-700'}}) }}
                            </div>
                        {% endfor %}
                    </div>
                    {{ form_errors(form.roles) }}
                </div>
                
                <div class="flex justify-center gap-3 mt-6">
                    <button type="submit" class="inline-flex items-center px-6 py-3 bg-blue-500 hover:bg-blue-700 text-white border-0 rounded-xl font-bold cursor-pointer transition-colors">
                        <i class="fas fa-save mr-2"></i> Enregistrer
                    </button>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="inline-flex items-center px-6 py-3 bg-white text-gray-700 rounded-xl font-bold transition-all hover:shadow-md no-underline">
                        <i class="fas fa-times mr-2"></i> Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
