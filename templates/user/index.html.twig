{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="ml-20">
        <div class="max-w-5xl mx-auto my-10 bg-gradient-to-b from-blue-200 to-blue-300 rounded-3xl px-8 py-8 shadow-lg">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-3xl font-bold text-gray-900 m-0">Gestion des utilisateurs</h1>
                <a href="{{ path('app_register') }}" class="px-5 py-2.5 bg-white text-blue-600 rounded-xl text-sm font-bold no-underline inline-flex items-center transition-all hover:shadow-md hover:bg-blue-50">
                    <i class="fas fa-plus mr-2"></i> Nouvel utilisateur
                </a>
            </div>
            
            <div class="overflow-x-auto bg-white rounded-2xl shadow-sm">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-200">
                            <th class="text-left px-6 py-4 text-gray-700 font-semibold text-sm">ID</th>
                            <th class="text-left px-6 py-4 text-gray-700 font-semibold text-sm">Utilisateur</th>
                            <th class="text-left px-6 py-4 text-gray-700 font-semibold text-sm">Rôles</th>
                            <th class="text-left px-6 py-4 text-gray-700 font-semibold text-sm">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr class="border-b border-gray-100 hover:bg-blue-50 transition-colors">
                            <td class="px-6 py-4 text-gray-500 font-mono text-sm">#{{ user.id }}</td>
                            <td class="px-6 py-4">
                                <div class="text-gray-900 font-medium">{{ user.email }}</div>
                                {% if user.nom is defined and user.prenom is defined %}
                                    <small class="text-gray-600">{{ user.prenom }} {{ user.nom }}</small>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                {% for role in user.roles %}
                                    <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold mr-2 {{ role == 'ROLE_ADMIN' ? 'bg-red-100 text-red-700' : 'bg-blue-100 text-blue-700' }}">
                                        {{ role|replace({'ROLE_': ''})|lower|capitalize }}
                                    </span>
                                {% endfor %}
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex gap-2">
                                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg text-xs font-medium no-underline inline-flex items-center transition-colors">
                                        <i class="fas fa-eye mr-1.5"></i> Voir
                                    </a>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-xs font-medium no-underline inline-flex items-center transition-colors">
                                        <i class="fas fa-edit mr-1.5"></i> Modifier
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-10 text-gray-500 italic">Aucun utilisateur trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
