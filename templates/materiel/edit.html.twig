{# 
    Template de modification d'un matériel existant
    Affiche le formulaire pré-rempli avec les données actuelles du matériel
    Inclut également le formulaire de suppression pour faciliter la gestion
#}

{% extends 'base.html.twig' %}

{% block title %}Modifier le Matériel{% endblock %}

{% block body %}
    {# Conteneur centré pour le formulaire #}
    <div class="ml-20 min-h-screen bg-gray-50 flex items-center justify-center p-5">
        <div class="bg-gradient-to-b from-blue-200 to-blue-300 rounded-3xl p-10 w-full max-w-md shadow-lg">
            {# Titre de la page #}
            <h1 class="text-center text-3xl font-bold text-gray-800 mb-8">Modifier le matériel</h1>

            {# Inclusion du formulaire avec label personnalisé #}
            {{ include('materiel/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

            {# Lien de retour vers la liste #}
            <a href="{{ path('app_materiel_index') }}" class="block text-center mt-5 text-blue-600 hover:underline text-sm">Retour à la liste</a>

            {# Formulaire de suppression #}
            <div class="text-center mt-5">
                {{ include('materiel/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
