{# 
    Template d'affichage des détails d'un matériel
    Affiche toutes les informations d'un matériel avec un design en cartes
    Inclut les boutons d'action (modifier, supprimer) et de navigation
#}

{% extends 'base.html.twig' %}

{% block title %}Détails du Matériel{% endblock %}

{% block body %}
    {# Conteneur principal avec sidebar offset #}
    <div class="ml-20 min-h-screen bg-gray-50 p-5">
        <div class="max-w-4xl mx-auto">
            {# En-tête avec nom et ID du matériel #}
            <div class="bg-gradient-to-b from-blue-200 to-blue-300 rounded-3xl p-8 mb-8 shadow-lg text-center">
                <h1 class="text-4xl font-bold text-gray-800 mb-2">{{ materiel.libelle }}</h1>
                <p class="text-lg text-gray-600">ID: {{ materiel.id }}</p>
            </div>

            {# Carte des détails du matériel #}
            <div class="bg-white rounded-3xl p-8 shadow-lg mb-8">
                <div class="space-y-4">
                    {# Affichage du libellé #}
                    <div class="flex">
                        <div class="w-48 bg-gradient-to-b from-blue-200 to-blue-300 px-5 py-4 rounded-l-lg">
                            <span class="font-bold text-gray-800">Libellé</span>
                        </div>
                        <div class="flex-1 bg-gray-100 px-5 py-4 rounded-r-lg">
                            <span class="text-gray-800">{{ materiel.libelle }}</span>
                        </div>
                    </div>
                    
                    {# Affichage de la quantité #}
                    <div class="flex">
                        <div class="w-48 bg-gradient-to-b from-blue-200 to-blue-300 px-5 py-4 rounded-l-lg">
                            <span class="font-bold text-gray-800">Quantité</span>
                        </div>
                        <div class="flex-1 bg-gray-100 px-5 py-4 rounded-r-lg">
                            <span class="text-gray-800">{{ materiel.quantite }}</span>
                        </div>
                    </div>
                    
                    {# Affichage de la description #}
                    <div class="flex">
                        <div class="w-48 bg-gradient-to-b from-blue-200 to-blue-300 px-5 py-4 rounded-l-lg">
                            <span class="font-bold text-gray-800">Description</span>
                        </div>
                        <div class="flex-1 bg-gray-100 px-5 py-4 rounded-r-lg">
                            <span class="text-gray-800 leading-relaxed break-words">{{ materiel.description }}</span>
                        </div>
                    </div>
                </div>
            </div>

            {# Carte des actions #}
            <div class="bg-white rounded-3xl p-8 shadow-lg text-center">
                {# Boutons de navigation et modification #}
                <div class="flex gap-4 justify-center flex-wrap mb-5">
                    <a href="{{ path('app_materiel_index') }}" class="px-6 py-3 rounded-lg font-bold bg-gray-600 text-white hover:bg-gray-700 transition-colors">Retour à la liste</a>
                    <a href="{{ path('app_materiel_edit', {'id': materiel.id}) }}" class="px-6 py-3 rounded-lg font-bold bg-yellow-500 text-gray-800 hover:bg-yellow-600 transition-colors">Modifier</a>
                </div>
                
                {# Formulaire de suppression #}
                <div class="mt-5">
                    {{ include('materiel/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
