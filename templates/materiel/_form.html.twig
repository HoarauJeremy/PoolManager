{# 
    Template de formulaire pour la création/modification de matériel
    Ce template est réutilisable pour les actions new et edit du contrôleur MaterielController
    Il utilise les classes Tailwind CSS pour le styling
#}

{{ form_start(form) }}
    {# Champ libellé du matériel #}
    <div class="mb-5">
        {{ form_label(form.libelle, 'Libellé', {'label_attr': {'class': 'block mb-2 font-medium text-gray-700 text-sm'}}) }}
        {{ form_widget(form.libelle, {'attr': {'class': 'w-full px-4 py-3 border-0 rounded-lg bg-white text-black text-base focus:outline-none focus:ring-3 focus:ring-blue-200 transition-shadow', 'placeholder': 'Libellé du matériel'}}) }}
    </div>
    
    {# Champ quantité disponible #}
    <div class="mb-5">
        {{ form_label(form.quantite, 'Quantité', {'label_attr': {'class': 'block mb-2 font-medium text-gray-700 text-sm'}}) }}
        {{ form_widget(form.quantite, {'attr': {'class': 'w-full px-4 py-3 border-0 rounded-lg bg-white text-black text-base focus:outline-none focus:ring-3 focus:ring-blue-200 transition-shadow', 'placeholder': 'Quantité'}}) }}
    </div>
    
    {# Champ description détaillée #}
    <div class="mb-5">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block mb-2 font-medium text-gray-700 text-sm'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 border-0 rounded-lg bg-white text-black text-base focus:outline-none focus:ring-3 focus:ring-blue-200 transition-shadow min-h-24 resize-y', 'placeholder': 'Description du matériel'}}) }}
    </div>
    
    {# Rendu des champs cachés (token CSRF, etc.) #}
    {{ form_rest(form) }}
    
    {# Bouton de soumission du formulaire #}
    <button type="submit" class="w-full bg-blue-600 text-white border-0 rounded-lg py-4 text-base font-bold cursor-pointer hover:bg-blue-700 active:bg-blue-800 transition-colors mt-2">
        {{ button_label|default('Créer le matériel') }}
    </button>
{{ form_end(form) }}
