{# 
    Template de création d'un nouveau matériel
    Affiche le formulaire de création avec un design centré et responsive
    Utilise le template _form.html.twig pour la cohérence
#}

{% extends 'base.html.twig' %}

{% block title %}Nouveau Matériel{% endblock %}

{% block body %}
    {# Conteneur centré pour le formulaire #}
    <div class="ml-20 min-h-screen bg-gray-50 flex items-center justify-center p-5">
        <div class="bg-gradient-to-b from-blue-200 to-blue-300 rounded-3xl p-10 w-full max-w-md shadow-lg">
            {# Titre de la page #}
            <h1 class="text-center text-3xl font-bold text-gray-800 mb-8">Créer un nouveau matériel</h1>

            {# Inclusion du formulaire réutilisable #}
            {{ include('materiel/_form.html.twig') }}

            {# Lien de retour vers la liste #}
            <a href="{{ path('app_materiel_index') }}" class="block text-center mt-5 text-blue-600 hover:underline text-sm">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
