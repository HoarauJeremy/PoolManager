{# 
    Template d'affichage de la liste des matériels
    Affiche tous les matériels dans un tableau avec possibilité de voir, modifier et créer
    Utilise Tailwind CSS pour le styling responsive
#}

{% extends 'base.html.twig' %}

{% block title %}Liste des Matériels{% endblock %}

{% block body %}
    {# Conteneur principal avec sidebar offset #}
    <div class="ml-20 min-h-screen bg-gray-50 p-5">
        <div class="max-w-6xl mx-auto">
            {# En-tête avec titre et bouton de création #}
            <div class="bg-gradient-to-b from-blue-200 to-blue-300 rounded-3xl p-8 mb-8 shadow-lg text-center">
                <h1 class="text-4xl font-bold text-gray-800 mb-5">Liste des Matériels</h1>
                <a href="{{ path('app_materiel_new') }}" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-700 transition-colors">Créer un nouveau matériel</a>
            </div>

            {# Tableau des matériels #}
            <div class="bg-white rounded-3xl p-8 shadow-lg overflow-x-auto">
                <table class="w-full border-collapse">
                    {# En-têtes du tableau #}
                    <thead>
                        <tr class="bg-gradient-to-b from-blue-200 to-blue-300">
                            <th class="px-4 py-4 text-left font-bold text-gray-800 text-base border-0">ID</th>
                            <th class="px-4 py-4 text-left font-bold text-gray-800 text-base border-0">Libellé</th>
                            <th class="px-4 py-4 text-left font-bold text-gray-800 text-base border-0">Quantité</th>
                            <th class="px-4 py-4 text-left font-bold text-gray-800 text-base border-0">Description</th>
                            <th class="px-4 py-4 text-left font-bold text-gray-800 text-base border-0">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {# Boucle sur tous les matériels #}
                    {% for materiel in materiels %}
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-4 py-4 border-b border-gray-200 align-middle">{{ materiel.id }}</td>
                            <td class="px-4 py-4 border-b border-gray-200 align-middle">{{ materiel.libelle }}</td>
                            <td class="px-4 py-4 border-b border-gray-200 align-middle">{{ materiel.quantite }}</td>
                            {# Description tronquée avec tooltip au survol #}
                            <td class="px-4 py-4 border-b border-gray-200 align-middle max-w-xs overflow-hidden text-ellipsis whitespace-nowrap" title="{{ materiel.description }}">{{ materiel.description }}</td>
                            <td class="px-4 py-4 border-b border-gray-200 align-middle">
                                {# Boutons d'action pour chaque matériel #}
                                <div class="flex gap-2">
                                    <a href="{{ path('app_materiel_show', {'id': materiel.id}) }}" class="px-3 py-1.5 rounded-md text-sm font-medium bg-green-600 text-white hover:bg-green-700 transition-colors">Voir</a>
                                    <a href="{{ path('app_materiel_edit', {'id': materiel.id}) }}" class="px-3 py-1.5 rounded-md text-sm font-medium bg-yellow-500 text-gray-800 hover:bg-yellow-600 transition-colors">Modifier</a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        {# Message affiché quand aucun matériel n'est trouvé #}
                        <tr>
                            <td colspan="5" class="text-center py-10 text-gray-500 italic">Aucun matériel trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
