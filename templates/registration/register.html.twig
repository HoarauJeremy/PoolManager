{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto my-10 bg-gradient-to-b from-blue-200 to-blue-300 rounded-3xl px-6 py-8 shadow-lg relative">
        <!-- Bouton de retour -->
        <a href="{{ referer }}" class="absolute top-4 left-4 text-gray-600 hover:text-gray-800 transition-colors" title="Retour">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
        </a>
        <h1 class="text-center text-3xl font-bold mb-7 text-gray-900">Créer un compte</h1>

        {{ form_start(registrationForm) }}
            <div class="mb-4">
                {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.nom, {'attr': {
                    'class': 'w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm mb-1.5 transition-shadow focus:shadow-[0_0_0_2px_#339af0]',
                    'placeholder': 'Nom'
                }}) }}
                {{ form_errors(registrationForm.nom) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.prenom, 'Prénom', {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.prenom, {'attr': {
                    'class': 'w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm mb-1.5 transition-shadow focus:shadow-[0_0_0_2px_#339af0]',
                    'placeholder': 'Prénom'
                }}) }}
                {{ form_errors(registrationForm.prenom) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.tel_gsm, 'Numéro de téléphone', {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.tel_gsm, {'attr': {
                    'class': 'w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm mb-1.5 transition-shadow focus:shadow-[0_0_0_2px_#339af0]',
                    'placeholder': 'Numéro de téléphone'
                }}) }}
                {{ form_errors(registrationForm.tel_gsm) }}
            </div>
            
            <div class="mb-4">
                {{ form_label(registrationForm.role, 'Rôle', {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.role, {'attr': {
                    'class': 'w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm mb-1.5 transition-shadow focus:shadow-[0_0_0_2px_#339af0]',
                }}) }}
                {{ form_errors(registrationForm.role) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {
                    'class': 'w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm mb-1.5 transition-shadow focus:shadow-[0_0_0_2px_#339af0]',
                    'placeholder': 'votre@email.com'
                }}) }}
                {% if registrationForm.email.vars.errors|length > 0 %}
                    <div class="text-sm text-red-600 mt-1">
                        {% for error in registrationForm.email.vars.errors %}
                            <p>{{ error.message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm mb-1.5 transition-shadow focus:shadow-[0_0_0_2px_#339af0]',
                        'placeholder': '••••••••',
                        'autocomplete': 'new-password'
                    },
                    'label': 'Mot de passe'
                }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="mt-4 mb-6">
                <div class="inline-flex items-center">
                    <label class="relative flex items-center p-1.5 rounded-full cursor-pointer" for="{{ registrationForm.agreeTerms.vars.id }}">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {
                            'class': 'before:content[" "] peer relative h-5 w-5 cursor-pointer appearance-none rounded-md border border-blue-gray-200 transition-all before:absolute before:top-2/4 before:left-2/4 before:block before:h-12 before:w-12 before:-translate-y-2/4 before:-translate-x-2/4 before:rounded-full before:bg-blue-gray-500 before:opacity-0 before:transition-opacity checked:border-blue-500 checked:bg-blue-500 checked:before:bg-blue-500 hover:before:opacity-10'
                        }}) }}
                        <span class="absolute text-white transition-opacity opacity-0 pointer-events-none top-2/4 left-2/4 -translate-y-2/4 -translate-x-2/4 peer-checked:opacity-100">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor" stroke="currentColor" stroke-width="1">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </span>
                    </label>
                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="ml-2 text-sm font-medium text-gray-700 cursor-pointer select-none">
                        J'accepte les <a href="#" class="text-blue-500 hover:underline">conditions d'utilisation</a>
                    </label>
                </div>
                {% if registrationForm.agreeTerms.vars.errors|length > 0 %}
                    <p class="mt-1 text-sm text-red-600">{{ form_errors(registrationForm.agreeTerms) }}</p>
                {% endif %}
            </div>

            <button type="submit" class="w-full py-3 bg-blue-500 hover:bg-blue-700 border-0 rounded-xl text-base text-white mt-5 cursor-pointer font-bold transition-colors">S'inscrire</button>
        {{ form_end(registrationForm) }}

    </div>
{% endblock %}
