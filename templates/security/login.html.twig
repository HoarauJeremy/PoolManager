{% extends 'basenologin.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto my-10 bg-gradient-to-b from-blue-200 to-blue-300 rounded-3xl px-6 py-8 shadow-lg">
        <h1 class="text-center text-3xl font-bold mb-7 text-gray-900">Connexion</h1>

        {% if error %}
            <div class="px-4 py-3 rounded-lg mb-4 text-sm bg-red-100 text-red-800 border border-red-300">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="px-4 py-3 rounded-lg mb-4 text-sm bg-green-100 text-green-800 border border-green-300">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, 
                <a href="{{ path('app_logout') }}" class="text-green-800 underline">Déconnexion</a>
            </div>
        {% endif %}

        <form method="post">
            <div class="mb-4">
                <label for="inputEmail" class="block mb-1.5 font-medium text-gray-700">Email</label>
                <input 
                    type="email" 
                    value="{{ last_username }}" 
                    name="email" 
                    id="inputEmail" 
                    class="w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm transition-shadow focus:shadow-[0_0_0_2px_#339af0]" 
                    autocomplete="email" 
                    placeholder="votre@email.com"
                    required 
                    autofocus>
            </div>
            
            <div class="mb-4">
                <label for="inputPassword" class="block mb-1.5 font-medium text-gray-700">Mot de passe</label>
                <input 
                    type="password" 
                    name="password" 
                    id="inputPassword" 
                    class="w-full px-4 py-3 border-0 rounded-xl outline-none bg-white shadow-sm transition-shadow focus:shadow-[0_0_0_2px_#339af0]" 
                    autocomplete="current-password" 
                    placeholder="••••••••"
                    required>
            </div>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <div class="flex items-center mt-2.5">
                <input type="checkbox" name="_remember_me" id="remember_me" class="mr-2 w-4 h-4">
                <label for="remember_me" class="text-sm text-gray-700">Se souvenir de moi</label>
            </div>

            <button type="submit" class="w-full py-3 bg-blue-500 hover:bg-blue-700 border-0 rounded-xl text-base text-white mt-5 cursor-pointer font-bold transition-colors">
                Se connecter
            </button>
        </form>

        <a href="{{ path('app_register') }}" class="block mt-5 text-center text-sm text-blue-500 hover:underline hover:text-blue-700 no-underline">Pas encore de compte ? S'inscrire</a>
    </div>
{% endblock %}
