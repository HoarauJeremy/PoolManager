{% extends 'base.html.twig' %}
{% block title %}Mon Dashboard - Pool Manager{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- En-tête -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Mon Tableau de bord</h1>
        <p class="mt-2 text-sm text-gray-600">Mes interventions et activités</p>
    </div>

    <!-- Cartes de statistiques -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class='bx bx-calendar text-3xl text-blue-600'></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Planifiées</dt>
                            <dd class="text-lg font-semibold text-gray-900">{{ stats.interventions_par_statut.planifiees ?? 0 }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class='bx bx-time text-3xl text-yellow-600'></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">En cours</dt>
                            <dd class="text-lg font-semibold text-gray-900">{{ stats.interventions_par_statut.en_cours ?? 0 }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class='bx bx-check-circle text-3xl text-green-600'></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Terminées</dt>
                            <dd class="text-lg font-semibold text-gray-900">{{ stats.interventions_par_statut.terminees ?? 0 }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- Layout A|C, B|C : Colonnes avec interventions en cours et à venir à gauche, activités à droite -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Colonne gauche: Interventions en cours (A) et Interventions à venir (B) -->
        <div class="space-y-6">
            <!-- A - Interventions en cours -->
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Interventions en cours</h3>

                    {% if interventions_en_cours is empty %}
                        <div class="text-center py-12">
                            <i class='bx bx-time text-5xl text-gray-300'></i>
                            <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune intervention en cours</h3>
                            <p class="mt-1 text-sm text-gray-500">Vous n'avez aucune intervention en cours pour le moment.</p>
                        </div>
                    {% else %}
                        <div class="space-y-4">
                            {% for intervention in interventions_en_cours %}
                                <div class="border-2 border-yellow-200 bg-yellow-50 rounded-lg p-5 hover:shadow-md transition">
                                    <div class="mb-3">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                            <i class='bx bx-time-five mr-1'></i>
                                            En cours
                                        </span>
                                    </div>
                                    <h4 class="text-base font-semibold text-gray-900 mb-2">{{ intervention.libelle }}</h4>
                                    <div class="space-y-1 mb-4">
                                        <p class="text-sm text-gray-600">
                                            <i class='bx bx-user text-gray-400'></i>
                                            {{ intervention.client ? intervention.client.nom : 'Non défini' }}
                                        </p>
                                        <p class="text-sm text-gray-600">
                                            <i class='bx bx-calendar text-gray-400'></i>
                                            {{ intervention.dateDebut|date('d/m/Y à H:i') }}
                                        </p>
                                        <p class="text-sm text-gray-600">
                                            <i class='bx bx-category text-gray-400'></i>
                                            {{ intervention.type ? intervention.type.nom : 'Non défini' }}
                                        </p>
                                    </div>
                                    <a href="{{ path('app_intervention_show', {id: intervention.id}) }}" class="inline-flex items-center justify-center w-full px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-semibold text-white bg-yellow-600 hover:bg-yellow-700 transition-colors">
                                        <i class='bx bx-show text-lg mr-2'></i>
                                        Voir
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- B - Mes interventions à venir -->
            <div class="bg-white p-6 rounded-lg shadow border border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Mes interventions à venir</h3>
                {% if interventions_a_venir is empty %}
                    <div class="flex items-center justify-center h-64 text-gray-400">
                        <div class="text-center">
                            <i class='bx bx-calendar text-5xl text-gray-300'></i>
                            <p class="mt-2 text-sm">Aucune intervention planifiée</p>
                        </div>
                    </div>
                {% else %}
                    <div class="space-y-4">
                        {% for intervention in interventions_a_venir %}
                            <div class="border-2 border-blue-200 bg-blue-50 rounded-xl p-5 hover:shadow-lg transition-shadow">
                                <div class="mb-3">
                                    <div class="flex justify-between items-start mb-2">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-500 text-white shadow-sm">
                                            <i class='bx bx-calendar-check mr-1'></i>
                                            Planifiée
                                        </span>
                                        <span class="text-xs font-medium text-gray-500 bg-gray-100 px-2 py-1 rounded">{{ intervention.type ? intervention.type.nom : 'Non défini' }}</span>
                                    </div>
                                    <h4 class="text-base font-bold text-gray-900 mb-2">{{ intervention.libelle }}</h4>
                                </div>

                                <div class="space-y-2 mb-4">
                                    <div class="flex items-center text-sm text-gray-700">
                                        <i class='bx bx-user text-blue-500 text-lg mr-2'></i>
                                        <span class="font-medium">{{ intervention.client ? intervention.client.nom : 'Non défini' }}</span>
                                    </div>
                                    <div class="flex items-center text-sm text-gray-600">
                                        <i class='bx bx-calendar text-blue-500 text-lg mr-2'></i>
                                        <span>{{ intervention.dateDebut|date('d/m/Y à H:i') }}</span>
                                    </div>
                                    {% if intervention.client and intervention.client.adresse %}
                                    <div class="flex items-center text-sm text-gray-600">
                                        <i class='bx bx-map text-blue-500 text-lg mr-2'></i>
                                        <span class="truncate">{{ intervention.client.adresse }}</span>
                                    </div>
                                    {% endif %}
                                </div>

                                <div class="flex gap-2">
                                    <form method="post" action="{{ path('app_intervention_start', {id: intervention.id}) }}" class="flex-1">
                                        <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-semibold text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
                                            <i class='bx bx-play-circle text-lg mr-2'></i>
                                            Passer en cours
                                        </button>
                                    </form>
                                    <a href="{{ path('app_intervention_show', {id: intervention.id}) }}" class="flex-1 inline-flex items-center justify-center px-4 py-2.5 border-2 border-blue-500 rounded-lg shadow-sm text-sm font-semibold text-blue-600 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                                        <i class='bx bx-show text-lg mr-2'></i>
                                        Voir détails
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Colonne droite: C - Activités récentes (spanning full height) -->
        <div class="bg-white p-6 rounded-lg shadow border border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Activités récentes de l'équipe</h3>
            <div class="flow-root">
                <ul class="-mb-8">
                    {% for activite in activites %}
                        <li>
                            <div class="relative pb-8">
                                {% if not loop.last %}
                                    <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                                {% endif %}
                                <div class="relative flex space-x-3">
                                    <div>
                                        <span class="h-8 w-8 rounded-full bg-gray-400 flex items-center justify-center ring-8 ring-white">
                                            <i class='bx bx-user text-white'></i>
                                        </span>
                                    </div>
                                    <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                                        <div>
                                            <p class="text-sm text-gray-900 font-medium">{{ activite.technicien }}</p>
                                            <p class="text-sm text-gray-500">{{ activite.intervention }}</p>
                                            <p class="text-xs text-gray-400">{{ activite.client }}</p>
                                        </div>
                                        <div class="text-right text-sm whitespace-nowrap text-gray-500">
                                            <time datetime="{{ activite.date|date('Y-m-d') }}">{{ activite.date|date('d/m à H:i') }}</time>
                                            {% set statusClass = '' %}
                                            {% if activite.status.value == 'Planifer' %}
                                                {% set statusClass = 'bg-blue-100 text-blue-800' %}
                                            {% elseif activite.status.value == 'En cours' %}
                                                {% set statusClass = 'bg-yellow-100 text-yellow-800' %}
                                            {% elseif activite.status.value == 'Terminer' %}
                                                {% set statusClass = 'bg-green-100 text-green-800' %}
                                            {% endif %}
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium mt-1 {{ statusClass }}">
                                                {{ activite.status.label() }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <!-- Historique des interventions -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
        <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Historique des interventions</h3>

            {% if historique is empty %}
                <div class="text-center py-12">
                    <i class='bx bx-calendar-x text-5xl text-gray-300'></i>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune intervention</h3>
                    <p class="mt-1 text-sm text-gray-500">Vous n'avez aucune intervention assignée pour le moment.</p>
                </div>
            {% else %}
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titre</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for intervention in historique %}
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">{{ intervention.libelle }}</div>
                                        <div class="text-xs text-gray-500">{{ intervention.type ? intervention.type.nom : 'Non défini' }}</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        {{ intervention.client ? intervention.client.nom : 'Non défini' }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        {{ intervention.dateDebut|date('d/m/Y H:i') }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% set statusClass = '' %}
                                        {% if intervention.status.value == 'Terminer' %}
                                            {% set statusClass = 'bg-green-100 text-green-800' %}
                                        {% else %}
                                            {% set statusClass = 'bg-red-100 text-red-800' %}
                                        {% endif %}
                                        <span class="px-3 py-1 text-xs font-semibold rounded-full {{ statusClass }}">
                                            {{ intervention.status.label() }}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                {% if totalPages > 1 %}
                    <div class="px-6 py-4 border-t border-gray-200 mt-4">
                        <nav class="flex items-center justify-between">
                            <div class="flex-1 flex justify-between sm:hidden">
                                {% if currentPage > 1 %}
                                    <a href="{{ path('app_dashboard', {page: currentPage - 1}) }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                        Précédent
                                    </a>
                                {% endif %}
                                {% if currentPage < totalPages %}
                                    <a href="{{ path('app_dashboard', {page: currentPage + 1}) }}" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                        Suivant
                                    </a>
                                {% endif %}
                            </div>
                            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                                <div>
                                    <p class="text-sm text-gray-700">
                                        Affichage de <span class="font-medium">{{ ((currentPage - 1) * 10) + 1 }}</span> à <span class="font-medium">{{ min(currentPage * 10, totalItems) }}</span> sur <span class="font-medium">{{ totalItems }}</span> résultats
                                    </p>
                                </div>
                                <div>
                                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                                        {% if currentPage > 1 %}
                                            <a href="{{ path('app_dashboard', {page: currentPage - 1}) }}" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                <span class="sr-only">Précédent</span>
                                                <i class='bx bx-chevron-left text-xl'></i>
                                            </a>
                                        {% endif %}

                                        {% for page in 1..totalPages %}
                                            {% if page == currentPage %}
                                                <span class="relative inline-flex items-center px-4 py-2 border border-red-500 bg-red-50 text-sm font-medium text-red-600">
                                                    {{ page }}
                                                </span>
                                            {% elseif page == 1 or page == totalPages or (page >= currentPage - 2 and page <= currentPage + 2) %}
                                                <a href="{{ path('app_dashboard', {page: page}) }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                                                    {{ page }}
                                                </a>
                                            {% elseif page == currentPage - 3 or page == currentPage + 3 %}
                                                <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                                                    ...
                                                </span>
                                            {% endif %}
                                        {% endfor %}

                                        {% if currentPage < totalPages %}
                                            <a href="{{ path('app_dashboard', {page: currentPage + 1}) }}" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                <span class="sr-only">Suivant</span>
                                                <i class='bx bx-chevron-right text-xl'></i>
                                            </a>
                                        {% endif %}
                                    </nav>
                                </div>
                            </div>
                        </nav>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>

<script>
    const statsData = {{ stats|json_encode|raw }};
</script>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}
