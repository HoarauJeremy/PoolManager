{% extends 'base.html.twig' %}
{% block title %}Dashboard - Pool Manager{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- En-tête -->
            <div class="mb-8 flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Tableau de bord Admin</h1>
                    <p class="mt-2 text-sm text-gray-600">Suivi des interventions et statistiques</p>
                </div>
                <a href="{{ path('app_intervention_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    <i class='bx bx-plus text-lg mr-2'></i>
                    Créer une intervention
                </a>
            </div>

            <!-- Cartes de statistiques -->
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-8">
                <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Planifiées</dt>
                                    <dd class="text-lg font-semibold text-gray-900">{{ stats.interventions_par_statut.planifiees ?? 0 }}</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">En cours</dt>
                                    <dd class="text-lg font-semibold text-gray-900">{{ stats.interventions_par_statut.en_cours ?? 0 }}</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Terminées</dt>
                                    <dd class="text-lg font-semibold text-gray-900">{{ stats.interventions_par_statut.terminees ?? 0 }}</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Annulées</dt>
                                    <dd class="text-lg font-semibold text-gray-900">{{ stats.interventions_par_statut.annulees ?? 0 }}</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Graphiques -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
                <!-- Graphique des interventions par mois -->
                <div class="bg-white p-6 rounded-lg shadow border border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Interventions par mois</h3>
                    {% if stats.interventions_par_mois.data is empty or stats.interventions_par_mois.data|reduce((a, b) => a + b, 0) == 0 %}
                        <div class="flex items-center justify-center h-64 text-gray-400">
                            <div class="text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                </svg>
                                <p class="mt-2 text-sm">Aucune donnée disponible</p>
                            </div>
                        </div>
                    {% else %}
                        <div style="height: 300px; position: relative;">
                            <canvas id="interventionsChart"></canvas>
                        </div>
                    {% endif %}
                </div>

                <!-- Graphique des types d'interventions -->
                <div class="bg-white p-6 rounded-lg shadow border border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Types d'interventions</h3>
                    {% if stats.interventions_par_type.data is empty or stats.interventions_par_type.data|reduce((a, b) => a + b, 0) == 0 %}
                        <div class="flex items-center justify-center h-64 text-gray-400">
                            <div class="text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
                                </svg>
                                <p class="mt-2 text-sm">Aucune donnée disponible</p>
                            </div>
                        </div>
                    {% else %}
                        <div style="height: 300px; position: relative;">
                            <canvas id="typesChart"></canvas>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Liste des interventions -->
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-lg font-semibold text-gray-900">Interventions récentes</h3>

                        <!-- Filtre par statut -->
                        <div class="flex items-center space-x-2">
                            <label for="statusFilter" class="text-sm font-medium text-gray-700">Filtrer par statut:</label>
                            <select id="statusFilter" class="px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 text-sm">
                                <option value="all" {% if statusFilter == 'all' %}selected{% endif %}>Tous</option>
                                <option value="planifiees" {% if statusFilter == 'planifiees' %}selected{% endif %}>Planifiées</option>
                                <option value="en_cours" {% if statusFilter == 'en_cours' %}selected{% endif %}>En cours</option>
                                <option value="terminees" {% if statusFilter == 'terminees' %}selected{% endif %}>Terminées</option>
                                <option value="annulees" {% if statusFilter == 'annulees' %}selected{% endif %}>Annulées</option>
                            </select>
                        </div>
                    </div>

                    {% if interventions is empty %}
                        <div class="text-center py-12">
                            <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                            <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune intervention</h3>
                            <p class="mt-1 text-sm text-gray-500">Commencez par créer une nouvelle intervention.</p>
                        </div>
                    {% else %}
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titre</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Technicien(s)</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                {% for intervention in interventions %}
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900">{{ intervention.libelle }}</div>
                                            <div class="text-xs text-gray-500">{{ intervention.type ? intervention.type.nom : 'Non défini' }}</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                            {{ intervention.client ? intervention.client.nom : 'Non défini' }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                            {{ intervention.dateDebut|date('d/m/Y H:i') }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                            {% if intervention.techniciens is empty %}
                                                <span class="text-gray-400">Non assigné</span>
                                            {% else %}
                                                {% for technicien in intervention.techniciens %}
                                                    {{ technicien.nom }}{% if not loop.last %}, {% endif %}
                                                {% endfor %}
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            {% set statusClass = '' %}
                                            {% if intervention.status.value == 'Planifer' %}
                                                {% set statusClass = 'bg-blue-100 text-blue-800' %}
                                            {% elseif intervention.status.value == 'En cours' %}
                                                {% set statusClass = 'bg-yellow-100 text-yellow-800' %}
                                            {% elseif intervention.status.value == 'Terminer' %}
                                                {% set statusClass = 'bg-green-100 text-green-800' %}
                                            {% else %}
                                                {% set statusClass = 'bg-red-100 text-red-800' %}
                                            {% endif %}
                                            <span class="px-3 py-1 text-xs font-semibold rounded-full {{ statusClass }}">
                                                {{ intervention.status.label() }}
                                            </span>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}

                    <!-- Pagination -->
                    {% if totalPages > 1 %}
                        <div class="px-6 py-4 border-t border-gray-200">
                            <nav class="flex items-center justify-between">
                                <div class="flex-1 flex justify-between sm:hidden">
                                    {% if currentPage > 1 %}
                                        <a href="{{ path('app_dashboard', {page: currentPage - 1, status: statusFilter != 'all' ? statusFilter : null}) }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                            Précédent
                                        </a>
                                    {% endif %}
                                    {% if currentPage < totalPages %}
                                        <a href="{{ path('app_dashboard', {page: currentPage + 1, status: statusFilter != 'all' ? statusFilter : null}) }}" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                            Suivant
                                        </a>
                                    {% endif %}
                                </div>
                                <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                                    <div>
                                        <p class="text-sm text-gray-700">
                                            Affichage de <span class="font-medium">{{ ((currentPage - 1) * 10) + 1 }}</span> à <span class="font-medium">{{ min(currentPage * 10, totalItems) }}</span> sur <span class="font-medium">{{ totalItems }}</span> résultats
                                        </p>
                                    </div>
                                    <div>
                                        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                                            {% if currentPage > 1 %}
                                                <a href="{{ path('app_dashboard', {page: currentPage - 1, status: statusFilter != 'all' ? statusFilter : null}) }}" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                    <span class="sr-only">Précédent</span>
                                                    <i class='bx bx-chevron-left text-xl'></i>
                                                </a>
                                            {% endif %}

                                            {% for page in 1..totalPages %}
                                                {% if page == currentPage %}
                                                    <span class="relative inline-flex items-center px-4 py-2 border border-red-500 bg-red-50 text-sm font-medium text-red-600">
                                                        {{ page }}
                                                    </span>
                                                {% elseif page == 1 or page == totalPages or (page >= currentPage - 2 and page <= currentPage + 2) %}
                                                    <a href="{{ path('app_dashboard', {page: page, status: statusFilter != 'all' ? statusFilter : null}) }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                                                        {{ page }}
                                                    </a>
                                                {% elseif page == currentPage - 3 or page == currentPage + 3 %}
                                                    <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                                                        ...
                                                    </span>
                                                {% endif %}
                                            {% endfor %}

                                            {% if currentPage < totalPages %}
                                                <a href="{{ path('app_dashboard', {page: currentPage + 1, status: statusFilter != 'all' ? statusFilter : null}) }}" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                    <span class="sr-only">Suivant</span>
                                                    <i class='bx bx-chevron-right text-xl'></i>
                                                </a>
                                            {% endif %}
                                        </nav>
                                    </div>
                                </div>
                            </nav>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

<script>
    // Passage des données PHP vers JavaScript
    const statsData = {{ stats|json_encode|raw }};

    // Gestion du filtre de statut
    document.addEventListener('DOMContentLoaded', function() {
        const statusFilter = document.getElementById('statusFilter');

        if (statusFilter) {
            statusFilter.addEventListener('change', function() {
                const selectedStatus = this.value;
                const currentUrl = new URL(window.location.href);

                // Mettre à jour le paramètre status dans l'URL
                if (selectedStatus === 'all') {
                    currentUrl.searchParams.delete('status');
                } else {
                    currentUrl.searchParams.set('status', selectedStatus);
                }

                // Réinitialiser la page à 1 lors du changement de filtre
                currentUrl.searchParams.set('page', '1');

                // Rediriger vers la nouvelle URL
                window.location.href = currentUrl.toString();
            });
        }
    });
</script>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}
